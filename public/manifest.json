{
  "name": "Royal Chatflow - Messagerie Sécurisée",
  "short_name": "Royal Chatflow",
  "description": "Application de messagerie sécurisée avec chiffrement de bout en bout, appels vocaux et vidéo",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#25D366",
  "orientation": "portrait",
  "scope": "/",
  "lang": "fr",
  "categories": ["social", "productivity", "communication"],
  "icons": [
    {
      "src": "/favicon.ico",
      "sizes": "48x48",
      "type": "image/x-icon"
    },
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Nouvelle conversation",
      "short_name": "Nouveau chat",
      "description": "Démarrer une nouvelle conversation",
      "url": "/chat?new=true",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Profil utilisateur",
      "short_name": "Profil",
      "description": "Voir et modifier votre profil",
      "url": "/profile",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "video/*", "audio/*", ".pdf", ".doc", ".docx"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+royalchatflow",
      "url": "/handle/%s"
    }
  ],
  "capture_links": "existing-client-navigate"
}